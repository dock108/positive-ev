# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Environment Configuration
# Set to 1 for local development, 0 for deployment
IS_LOCAL=0

# Chrome Configuration
# When IS_LOCAL=1: Uses ~/Library/Application Support/Google/Chrome/ScraperProfile
# When IS_LOCAL=0: Uses ./chrome-profile in the project root
# You can override the local path by setting CHROME_PROFILE
CHROME_PROFILE=ScraperProfile

# Scraper Configuration
TARGET_URL=https://oddsjam.com/betting-tools/positive-ev
PAGE_LOAD_WAIT=5
BACKUP_RETENTION_DAYS=30
SUPABASE_BATCH_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
SCRAPER_LOG_FILE=logs/scraper.log

# Backup Configuration
BACKUP_DIR=backups

# Vercel-specific Configuration
VERCEL_ENV=production 